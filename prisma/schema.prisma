datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  body        String
  image       String
  author      User      @relation(fields: [authorId], references: [id])
  authorId    String    @db.ObjectId
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String   @unique
  password    String?
  projects    Project[]
}
